  /* Add any additional styling here */
}

.brutalist-heading {
  font-family: 'Arial Black', Arial, sans-serif;
  font-size: 3rem;
  font-weight: 900;
  letter-spacing: -0.02em;
  margin: 0;
}

@media (max-width: 768px) {
  .brutalist-heading {
    font-size: 2rem;
  }
}
</style>

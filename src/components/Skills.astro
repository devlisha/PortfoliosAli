---
// Minimal Skills Section
---

<section id="skills" class="section-padding bg-white">
  <div class="mx-auto max-w-7xl px-6">
    <div class="max-w-2xl mb-16 fade-in-up">
      <p class="minimal-subheading mb-4">Expertise</p>
      <h2 class="minimal-heading mb-6">Skills & Tools</h2>
      <p class="minimal-body">
        A versatile toolkit combining design thinking, technical proficiency, and cross-functional collaboration.
      </p>
    </div>

    <!-- Skills grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Design Tools -->
      <div class="space-y-4 fade-in-up delay-100">
        <h3 class="text-lg font-semibold border-b border-gray-200 pb-3">Design Tools</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-700">Figma</p>
          <p class="text-sm text-gray-700">Canva</p>
          <p class="text-sm text-gray-700">FigJam</p>
          <p class="text-sm text-gray-700">Framer</p>
          <p class="text-sm text-gray-700">Notion</p>
        </div>
      </div>

      <!-- Development -->
      <div class="space-y-4 fade-in-up delay-200">
        <h3 class="text-lg font-semibold border-b border-gray-200 pb-3">Development</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-700">JavaScript/TypeScript</p>
          <p class="text-sm text-gray-700">Swift</p>
          <p class="text-sm text-gray-700">Python</p>
          <p class="text-sm text-gray-700">Kotlin</p>
          <p class="text-sm text-gray-700">Git</p>
        </div>
      </div>

      <!-- Frameworks -->
      <div class="space-y-4 fade-in-up delay-300">
        <h3 class="text-lg font-semibold border-b border-gray-200 pb-3">Frameworks</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-700">Angular</p>
          <p class="text-sm text-gray-700">React</p>
          <p class="text-sm text-gray-700">Astro</p>
          <p class="text-sm text-gray-700">Spring</p>
          <p class="text-sm text-gray-700">WordPress</p>
        </div>
      </div>

      <!-- Languages -->
      <div class="space-y-4 fade-in-up delay-400">
        <h3 class="text-lg font-semibold border-b border-gray-200 pb-3">Languages</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-700">Spanish (Native)</p>
          <p class="text-sm text-gray-700">English (Intermediate)</p>
          <p class="text-sm text-gray-700">French (Basic)</p>
          <p class="text-sm text-gray-700">German (Basic)</p>
        </div>
      </div>
    </div>
  </div>
</section>

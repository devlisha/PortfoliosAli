---
// Minimal Skills Section
---

<section id="skills" class="section-padding bg-white">
  <div class="mx-auto max-w-7xl px-6">
    <div class="max-w-2xl mb-16 fade-in-up">
      <p class="minimal-subheading mb-4">Expertise</p>
      <h2 class="minimal-heading mb-6">Skills & Tools</h2>
      <p class="minimal-body">
        A comprehensive technical stack combining application development, educational technology, and collaborative methodologies.
      </p>
    </div>

    <!-- Skills grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Mobile Development -->
      <div class="space-y-4 fade-in-up delay-100">
        <h3 class="text-lg font-semibold border-b border-gray-200 pb-3">Mobile Development</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-700">Swift (iOS)</p>
          <p class="text-sm text-gray-700">UIKit</p>
          <p class="text-sm text-gray-700">SwiftUI</p>
          <p class="text-sm text-gray-700">REST APIs</p>
          <p class="text-sm text-gray-700">Xcode</p>
        </div>
      </div>

      <!-- Web Development -->
      <div class="space-y-4 fade-in-up delay-200">
        <h3 class="text-lg font-semibold border-b border-gray-200 pb-3">Web Development</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-700">Angular</p>
          <p class="text-sm text-gray-700">React</p>
          <p class="text-sm text-gray-700">TypeScript</p>
          <p class="text-sm text-gray-700">Astro</p>
          <p class="text-sm text-gray-700">HTML/CSS</p>
        </div>
      </div>

      <!-- Educational Tech -->
      <div class="space-y-4 fade-in-up delay-300">
        <h3 class="text-lg font-semibold border-b border-gray-200 pb-3">Educational Tech</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-700">Scratch</p>
          <p class="text-sm text-gray-700">MakeCode</p>
          <p class="text-sm text-gray-700">LEGO WeDo</p>
          <p class="text-sm text-gray-700">Minecraft Education</p>
          <p class="text-sm text-gray-700">Visual Programming</p>
        </div>
      </div>

      <!-- Languages & Tools -->
      <div class="space-y-4 fade-in-up delay-400">
        <h3 class="text-lg font-semibold border-b border-gray-200 pb-3">Languages & Tools</h3>
        <div class="space-y-2">
          <p class="text-sm text-gray-700">Spanish (Native)</p>
          <p class="text-sm text-gray-700">English (Intermediate)</p>
          <p class="text-sm text-gray-700">Git/GitHub</p>
          <p class="text-sm text-gray-700">Agile/Scrum</p>
          <p class="text-sm text-gray-700">VS Code</p>
        </div>
      </div>
    </div>
  </div>
</section>

---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portfolio de Alisha Ibarra Bello - Diseñadora y Desarrolladora" } = Astro.props;
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicons elegantes -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/svg+xml" sizes="16x16" href="/favicon-16.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Meta tags adicionales para SEO -->
    <meta name="author" content="Alisha Ibarra Bello" />
    <meta name="keywords" content="desarrolladora, diseñadora, portfolio, Swift, Angular, React, Madrid" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Fuentes de Google -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700&family=Syncopate:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-50 text-gray-900">
    <slot />
    
    <style>
      html {
        font-family: 'Nunito', system-ui, sans-serif;
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>

---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Process from '../components/Process.astro';
import About from '../components/About.astro';
import Experience from '../components/Experience.astro';
import Skills from '../components/Skills.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Alisha Ibarra Bello - UI/UX Designer">
	<Header />
	<main>
		<Hero />
		<About />
		<Process />
		<Skills />
		<Experience />
		
		<!-- Contact Section -->
		<section id="contact" class="section-padding bg-gray-50">
			<div class="mx-auto max-w-4xl px-6 text-center">
				<div class="fade-in-up">
					<p class="minimal-subheading mb-4">Get In Touch</p>
					<h2 class="minimal-heading mb-6">Let's Work Together</h2>
					<p class="minimal-body mb-12 max-w-2xl mx-auto">
						I'm currently available for freelance projects and open to new opportunities. 
						Let's discuss how we can create something meaningful together.
					</p>
					<a href="mailto:ibarrabelloalisha@gmail.com" class="minimal-btn minimal-btn-primary text-lg px-8 py-4">
						Start a Conversation
					</a>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>
